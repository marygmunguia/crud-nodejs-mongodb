<%- include('partials/_header'); %>
<div class="container-fluid">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Insertar título" name="title">
                        </div>
                        <div class="form-group">
                            <textarea cols="30" class="form-control" placeholder="Insertar descripción"
                                      name="description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- LIST -->
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <td>Nº</td>
                    <td>Título</td>
                    <td>Descripción</td>
                    <td>Operación</td>
                </tr>
                </thead>
                <tbody>
                <% for (var i = 0; i < tasks.length; i++){ %>
                    <tr>
                        <td><%= i + 1; %></td>
                        <td><%= tasks[i].title %></td>
                        <td><%= tasks[i].description %></td>
                        <td>
                            <a href="/done/<%= tasks[i]._id %>"
                               class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Completa!</a>
                            <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                            <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/_footer'); %>
